<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Groovy-Console</display-name>
    <servlet>
        <servlet-name>Scripting</servlet-name>
        <servlet-class>org.veronezi.groovyconsole.servlets.ScriptingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Scripting</servlet-name>
        <url-pattern>/scripting</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

